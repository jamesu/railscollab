!!! 1.1
%html
  %head
    %title= h page_title
    %meta{content: "text/html;charset=UTF-8", "http-equiv" => "content-type"}/
    = stylesheet_link_tag 'dialog'
    = javascript_importmap_tags
    = yield(:page_head)
  %body
    #dialog
      - if !@owner.nil? and @owner.logo.attached?
        #dialogLogo
          %img{src: "#{url_for(@owner.logo)}"}/
      .inner
        %h1= h(page_title)
        - if flash[:message]
          %div{class: "StatusMessage #{flash[:error] ? 'flash_error' : 'flash_success'}", id: flash[:error] ? 'error' : 'success'}= h(flash[:message])
        = yield
