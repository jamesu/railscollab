- @page_actions = []
- if can? :create_task_list, @active_project
  - @page_actions << {title: :add_task_list, :url=> new_project_task_list_path(@active_project)}

= form_with(model: @task, url: project_task_list_task_path(@task.project, @task.task_list, @task), method: :put) do |form|
  = render partial: 'form', locals: {form: form}
  %div
    %button.submit{type: "submit"}= t('edit_task')
