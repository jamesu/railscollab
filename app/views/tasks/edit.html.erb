<%
  @page_actions = []
  
  if can? :create_task_list, @active_project
    @page_actions << {:title => :add_task_list, :url=> new_project_task_list_path(@active_project)}
  end
%>
<%= form_tag task_path(:task_list_id => @task.task_list_id, :id => @task.id), :method => :put do %>
  <%= render :partial => 'form', :object => @task %>
  <div><button class="submit" type="submit"><%=t('edit_task') %></button></div>
<% end %>
