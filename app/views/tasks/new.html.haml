- @page_actions = []
- if can? :create_task_list, @active_project
  - @page_actions << {title: :add_task_list, :url=> new_project_task_list_path(@active_project)}

= form_with(model: @task, url: new_project_task_list_task_path(@task_list.project, @task_list)) do |form|
  = render partial: 'form', locals: {form: form}
  %div
    %button.submit{type: "submit"}= t('add_task')
