<%
  @page_actions = []
  
  if can? :create_task_list, @active_project
    @page_actions << {:title => :add_task_list, :url=> new_project_task_list_path(@active_project)}
  end
%>
<%= form_tag new_project_task_list_task_path(@task_list.project, :task_list_id => @task_list.id) do %>
  <%= render :partial => 'form', :object => @task %>
  <div><button class="submit" type="submit"><%= t('add_task') %></button></div>
<% end %>
