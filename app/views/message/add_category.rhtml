<%
  @page_title = :add_message_category.l
  
  @bread_crumbs = project_crumbs(:add_message_category, [{:title => :messages, :url => "/project/#{@active_project.id}/message"}])
  
  @page_actions = []
  
  if ProjectMessage.can_be_created_by(@logged_user, @active_project)
	@page_actions << {:title => :add_message, :url => "/project/#{@active_project.id}/message/add"}
  end

  if ProjectMessageCategory.can_be_created_by(@logged_user, @active_project)
    @page_actions << {:title => :add_category, :url => "/project/#{@active_project.id}/message/add_category"}
  end
  
  @additional_stylesheets = ['project/messages']
%>
<%= form_tag :controller => 'message', :action => 'add_category' %>
<%= render :partial => 'category_form' %>
    <button class="submit" type="submit"><%= :add_category.l %></button>
</form>
