<% if @folders.length > 0 %>
<div class="sidebarBlock">
  <h2><%= t('folders') %></h2>
  <div class="blockContent" id="sidebarFolderList">
    <ul>
<% if !@folder.nil? %>
      <li><%= link_to t('all_files'), project_files_path(@active_project) %></li>
<% else %>
      <li><%= link_to t('all_files'), project_files_path(@active_project), :class => 'selected' %></li>
<% end %>
    
<% @folders.each do |folder| -%>
<% if !@folder.nil? and @folder.id == folder.id %>
<% selected_class = {:class => 'selected'} %>
<% else %>
<% selected_class = {} %>
<% end %>
      <li><%= link_to (h folder.name), files_project_folder_path(folder.project, :id => folder.id), selected_class %> 
      <% if can?(:edit,folder) %><%= link_to render_icon('edit',''), edit_project_folder_path(folder.project, :id => folder.id) %><% end %>
      <% if can?(:delete,folder) %><%= link_to render_icon('cancel_gray',''), project_folder_path(folder.project, :id => folder.id), :method => :delete, :confirm => t('folder_delete_confirmation') %><% end %>
      </li>
<% end %>
    </ul>
	<% if @active_project.is_active? %>
    <p><a href="<%= new_project_folder_path(@active_project) %>"><%= t('add_folder') %></a></p>
	<% end %>
  </div>
</div>
<% end %>

<% if @important_files.length > 0 %>
<div class="sidebarBlock">
  <h2><%= t('important_files') %></h2>
  <div class="blockContent">
    <ul>
<% @important_files.each do |important_file| -%>
      <li>
        <a href="<%= important_file.object_url %>"><%= important_file.filename %></a><br />
        <span class="desc"><%= t('important_file_revisions_count', :count => important_file.project_file_revisions.length) %></span>
      </li>
<% end %>
    </ul>
  </div>
</div>
<% end %>
